boleh tapi betulkan melalui kod saya
<?php

namespace App\Http\Controllers;

use Illuminate\Http\Request;
use App\Models\CompanyModel;
use App\Models\BrandsModel;
use App\Models\CategoryAssetsModel;
use App\Models\LocationModel;
use App\Models\StatusModel;
use App\Models\CategoryModel; 

class AssetSettingController extends Controller
{
    public function indexCompany()
    {
        $company = CompanyModel::orderBy('asc')->paginate(10); // ambil semua data company
        return view('assets.assetssetting', compact('company'));
    }

    public function storeCompany (Request $request)
    {
        $request->validate([
            'company_name' => 'required|string|max:255'
        ]);

        $company = new CompanyModel();
        $company -> company_name = $request -> company_name;

        $company->save();
        return redirect('/assets/assetssetting')->with('success','Company added succesfully!');
    }
}

